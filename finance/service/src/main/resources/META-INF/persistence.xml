<persistence version="1.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd
http://java.sun.com/xml/ns/persistence ">

    <persistence-unit name="lavida"
                      transaction-type="RESOURCE_LOCAL">

        <class>com.lavida.service.entity.UserJdo</class>
        <class>com.lavida.service.entity.AuthorityJdo</class>

        <properties>
            <property name="javax.persistence.jdbc.driver"
                      value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/lavida" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="winner" />
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <!--<property name="hibernate.hbm2ddl.auto" value="update"/>-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
        </properties>
    </persistence-unit>
</persistence>